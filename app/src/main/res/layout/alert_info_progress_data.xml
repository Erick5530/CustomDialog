<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/lblDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/alert_info_datos"
        android:layout_marginLeft="@dimen/layout_margin_10dp"
        android:layout_marginTop="@dimen/layout_margin_10dp"
        />
    <LinearLayout
        android:id="@+id/linearDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ProgressBar
        android:id="@+id/progressBarDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/layout_margin_10dp"
        android:paddingRight="@dimen/layout_margin_10dp"
        android:layout_weight="20"
        />
        <TextView
            android:id="@+id/lblProgressData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="@string/progreso_datos"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lblImagenes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_info_imagenes"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/layout_margin_10dp"
        android:layout_marginTop="@dimen/layout_margin_10dp"
        />
    <LinearLayout
        android:id="@+id/linearImagenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/progressBarImagenes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/layout_margin_10dp"
            android:paddingRight="@dimen/layout_margin_10dp"
            android:layout_weight="20"
            />
        <TextView
            android:id="@+id/progressImagenes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="@string/progreso_datos"/>
    </LinearLayout>
    <TextView
        android:id="@+id/lblAdicional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_info_adicional"
        android:textSize="18sp"
        android:layout_marginLeft="@dimen/layout_margin_10dp"
        android:layout_marginTop="@dimen/layout_margin_10dp"
        />
    <LinearLayout
        android:id="@+id/linearAdicional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/progressBarAdicional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/layout_margin_10dp"
            android:paddingRight="@dimen/layout_margin_10dp"
            android:layout_weight="20"
            />
        <TextView
            android:id="@+id/progressAdicional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_weight="1"
            android:text="@string/progreso_datos"/>
    </LinearLayout>

</LinearLayout>